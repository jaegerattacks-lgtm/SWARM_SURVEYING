<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="view_robot_pkg">

  <xacro:arg name="config_file" default=""/>
  <xacro:arg name="robot_name" default="robot1"/>

  <xacro:property name="mesh_path" value="file:///home/nour/my_friend_ws/install/swarm_bringup/share/swarm_bringup/meshes"/>
   
  <link name="base_link"></link>

  <link name="chassis_link">
    <inertial>
      <origin xyz="-0.001 0 0.009" rpy="0 0 0" />
      <mass value="3.0" />
      <inertia ixx="0.0057" ixy="0" ixz="0" iyy="0.0086" iyz="0" izz="0.0139" />
    </inertial>
    <visual>
      <geometry><mesh filename="${mesh_path}/chassis_link.STL" /></geometry>
      <material name="silver"><color rgba="0.75 0.75 0.75 1" /></material>
    </visual>
    <collision>
      <geometry><mesh filename="${mesh_path}/chassis_link_coll.STL" /></geometry>
    </collision>
  </link>

  <joint name="base_to_chassis" type="fixed">
    <parent link="base_link" />
    <child link="chassis_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>

  <link name="camera_link">
    <visual>
      <geometry><box size="0.03 0.03 0.03"/></geometry>
      <material name="red"><color rgba="1 0 0 1"/></material>
    </visual>
    <collision>
      <geometry><box size="0.03 0.03 0.03"/></geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="chassis_link"/>
    <child link="camera_link"/>
    <origin xyz="0.18 0.05 0.06" rpy="0 0 0"/>
  </joint>

  <link name="camera_link_optical"></link>
  <joint name="camera_optical_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_link_optical"/>
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
  </joint>

  <gazebo reference="camera_link">
    <sensor name="$(arg robot_name)_camera_sensor" type="camera">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>30.0</update_rate>
      <camera>
        <horizontal_fov>1.089</horizontal_fov>
        <image>
          <format>R8G8B8</format>
          <width>320</width>
          <height>240</height>
        </image>
        <clip>
          <near>0.05</near>
          <far>8.0</far>
        </clip>
      </camera>
      
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <ros>
          <namespace>$(arg robot_name)</namespace>
          <remapping>image_raw:=$(arg robot_name)_camera_sensor/image_raw</remapping>
          <remapping>camera_info:=$(arg robot_name)_camera_sensor/camera_info</remapping>
        </ros>
        <frame_name>$(arg robot_name)_camera_link_optical</frame_name>
      </plugin>
    </sensor>
    <material>Gazebo/Red</material>
  </gazebo>

  <xacro:macro name="leg_assembly" params="prefix arm_xyz damper_xyz wheel_xyz piston_xyz piston_rpy wheel_mu arm_inertial_xyz">
    
    <link name="${prefix}_arm">
      <inertial>
        <origin xyz="${arm_inertial_xyz}" rpy="0 0 0" />
        <mass value="0.147" />
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.00018" iyz="0" izz="0.00013" />
      </inertial>
      <visual>
        <geometry><mesh filename="${mesh_path}/${prefix}_arm.STL" /></geometry>
        <material name="silver"/>
      </visual>
      <collision>
        <geometry><mesh filename="${mesh_path}/${prefix}_arm.STL" /></geometry>
      </collision>
    </link>
    <joint name="${prefix}_arm_joint" type="revolute">
      <origin xyz="${arm_xyz}" rpy="1.5708 0 0" />
      <parent link="chassis_link" />
      <child link="${prefix}_arm" />
      <axis xyz="0 0 -1" />
      <limit lower="0" upper="0" effort="0" velocity="0" />
    </joint>

    <link name="${prefix}_piston">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.001" />
        <inertia ixx="3.7e-07" ixy="0" ixz="0" iyy="1.8e-08" iyz="0" izz="3.7e-07" />
      </inertial>
      <visual>
        <geometry><mesh filename="${mesh_path}/${prefix}_piston.STL" /></geometry>
        <material name="blueish"><color rgba="0.79 0.81 0.93 1" /></material>
      </visual>
    </link>
    <joint name="${prefix}_piston_joint" type="revolute">
      <origin xyz="${piston_xyz}" rpy="${piston_rpy}" />
      <parent link="${prefix}_arm" />
      <child link="${prefix}_piston" />
      <axis xyz="0 0 -1" />
      <limit lower="0" upper="0" effort="0" velocity="0" />
    </joint>

    <link name="${prefix}_damper">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.018" />
        <inertia ixx="2.6e-06" ixy="0" ixz="0" iyy="2.5e-07" iyz="0" izz="2.6e-06" />
      </inertial>
      <visual>
        <geometry><mesh filename="${mesh_path}/${prefix}_damper.STL" /></geometry>
        <material name="blueish"/>
      </visual>
    </link>
    <joint name="${prefix}_damper_joint" type="revolute">
      <origin xyz="${damper_xyz}" rpy="1.5708 0 0" />
      <parent link="chassis_link" />
      <child link="${prefix}_damper" />
      <axis xyz="0 0 -1" />
      <limit lower="0" upper="0" effort="0" velocity="0" />
    </joint>

    <link name="${prefix}_wheel">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.096" />
        <inertia ixx="0.00014" ixy="0" ixz="0" iyy="0.00014" iyz="0" izz="0.00022" />
      </inertial>
      <visual>
        <geometry><mesh filename="${mesh_path}/${prefix}_wheel.STL" /></geometry>
        <material name="blueish"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry><cylinder radius="0.05" length="0.04"/></geometry>
      </collision>
    </link>
    
    <joint name="${prefix}_wheel_joint" type="continuous">
      <origin xyz="${wheel_xyz}" rpy="0 0 0" />
      <parent link="${prefix}_arm" />
      <child link="${prefix}_wheel" />
      <axis xyz="0 0 -1" />
    </joint>
    
    <gazebo reference="${prefix}_wheel">
      <mu1>${wheel_mu}</mu1>
      <mu2>${wheel_mu}</mu2>
      <kp>100000000.0</kp>
      <kd>10.0</kd>
      <minDepth>0.005</minDepth>
      <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="${prefix}_arm"><material>Gazebo/DarkGrey</material></gazebo>
    <gazebo reference="${prefix}_piston"><material>Gazebo/Grey</material></gazebo>
    <gazebo reference="${prefix}_damper"><material>Gazebo/Grey</material></gazebo>
  </xacro:macro>

  <xacro:leg_assembly prefix="front_right" arm_xyz="0.059 -0.154 -0.026" damper_xyz="0.175 -0.147 0.081" wheel_xyz="0.136 -0.061 0.058" piston_xyz="0.133 0.020 -0.007" piston_rpy="0 0 0" wheel_mu="1.2" arm_inertial_xyz="0.117 -0.045 -0.033" />
  <xacro:leg_assembly prefix="front_left" arm_xyz="0.059 0.154 -0.026" damper_xyz="0.175 0.147 0.081" wheel_xyz="0.136 -0.061 -0.058" piston_xyz="0.133 -0.02 0.007" piston_rpy="0 0 0" wheel_mu="1.2" arm_inertial_xyz="0.119 -0.039 0.033" />
  <xacro:leg_assembly prefix="back_right" arm_xyz="-0.056 -0.154 -0.026" damper_xyz="-0.172 -0.147 0.081" wheel_xyz="-0.136 -0.061 0.058" piston_xyz="-0.133 -0.020 -0.007" piston_rpy="0 0 0" wheel_mu="0.01" arm_inertial_xyz="-0.117 -0.045 -0.033" />
  <xacro:leg_assembly prefix="back_left" arm_xyz="-0.056 0.154 -0.026" damper_xyz="-0.172 0.147 0.081" wheel_xyz="-0.136 -0.061 -0.058" piston_xyz="-0.133 -0.020 0.007" piston_rpy="0 0 0" wheel_mu="0.01" arm_inertial_xyz="-0.117 -0.044 0.033" />

  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>

    <xacro:macro name="wheel_interface" params="prefix">
      <joint name="${prefix}_wheel_joint">
        <command_interface name="velocity">
          <param name="min">-10</param>
          <param name="max">10</param>
        </command_interface>
        <state_interface name="velocity"/>
        <state_interface name="position"/>
      </joint>
    </xacro:macro>
    <xacro:wheel_interface prefix="front_left"/>
    <xacro:wheel_interface prefix="front_right"/>
    <xacro:wheel_interface prefix="back_left"/>
    <xacro:wheel_interface prefix="back_right"/>

    <xacro:macro name="passive_interface" params="prefix suffix">
      <joint name="${prefix}_${suffix}_joint">
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
    </xacro:macro>
    
    <xacro:passive_interface prefix="front_left" suffix="arm"/>
    <xacro:passive_interface prefix="front_right" suffix="arm"/>
    <xacro:passive_interface prefix="back_left" suffix="arm"/>
    <xacro:passive_interface prefix="back_right" suffix="arm"/>
    
    <xacro:passive_interface prefix="front_left" suffix="piston"/>
    <xacro:passive_interface prefix="front_right" suffix="piston"/>
    <xacro:passive_interface prefix="back_left" suffix="piston"/>
    <xacro:passive_interface prefix="back_right" suffix="piston"/>
    
    <xacro:passive_interface prefix="front_left" suffix="damper"/>
    <xacro:passive_interface prefix="front_right" suffix="damper"/>
    <xacro:passive_interface prefix="back_left" suffix="damper"/>
    <xacro:passive_interface prefix="back_right" suffix="damper"/>
  </ros2_control>

  <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <ros>
        <namespace>/$(arg robot_name)</namespace>
        <remapping>robot_description:=/$(arg robot_name)/robot_description</remapping>
      </ros>
      <parameters>$(arg config_file)</parameters>
    </plugin>
  </gazebo>

</robot>
